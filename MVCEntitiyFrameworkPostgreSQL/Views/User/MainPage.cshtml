
@{
    ViewBag.Title = "MainPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Home Page";
}
<div style="width:100%; padding-right:0px;padding-left:0px;" class="container">
    <div id="carousel" class="carousel slide">
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/images/slider-1.jpeg" />
                <div class="container">
                    <div style="margin-bottom:20px;" class="carousel-caption">
                        @if (HttpContext.Current.Session["EmailSS"] != null)
                        {
                            <a class="btn btn-danger" href="~/User/HospitalIndex">Tüm Hastaneler</a>

                        }
                        else
                        {
                            <a class="btn btn-danger" href="~/User/Login">Tüm Hastaneler</a>
                        }

                    </div>
                </div>
            </div>
            <div class="item">
                <img src="~/images/slider-2.jpeg" />
                <div class="container">
                    <div style="margin-bottom:20px;" class="carousel-caption">
                        @if (HttpContext.Current.Session["EmailSS"] != null)
                        {
                            <a class="btn btn-danger" href="~/User/DoctorIndex">Tüm Doktorlar</a>
                        }
                        else
                        {
                            <a class="btn btn-danger" href="~/User/Login">Tüm Doktorlar</a>
                        }

                    </div>
                </div>
            </div>
            <div class="item">
                <img src="~/images/slider-3.jpeg" />
                <div class="container">
                    <div style="margin-bottom:20px;" class="carousel-caption">
                        @if (HttpContext.Current.Session["EmailSS"] != null)
                        {
                            <a class="btn btn-danger" href="~/User/TakeAppointment">Randevu Al</a>
                        }
                        else
                        {
                            <a class="btn btn-danger" href="~/User/Login">Randevu Al</a>
                        }

                    </div>
                </div>
            </div>
        </div>
        <a href="#carousel" class="left carousel-control" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a href="#carousel" class="right carousel-control" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <script>
        $("#carousel").carousel(
            {
                interval: 2000
            }
        );
    </script>
</div>




