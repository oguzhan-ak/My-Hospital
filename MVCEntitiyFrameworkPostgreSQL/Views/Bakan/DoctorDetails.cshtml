@model MVCEntitiyFrameworkPostgreSQL.Models.Doctor

@{
    ViewBag.Title = "DoctorDetails";
    Layout = "~/Views/Shared/_BakanLayout.cshtml";
}

<center><h2 style="font-weight: bold;">Doctor Details</h2></center>
<br />
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.name):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.email):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.password):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.hospitalId):
        </dt>

        @if (Model.hospitalId != null)
        {
            <dd>
                @Model.hospitalsCollection.Find(x => x.id == Model.hospitalId).name
            </dd>
        }
        else
        {
            <dd>
                Not chosen
            </dd>
        }


        <dt>
            @Html.DisplayNameFor(model => model.title):
        </dt>

        @if (Model.title != null)
        {
            <dd>
                @Html.DisplayFor(model => model.title)
            </dd>
        }
        else
        {
            <dd>
                Not entered
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.salary):
        </dt>
        @if (Model.salary != null)
        {
            <dd>
                @Html.DisplayFor(model => model.salary) TL
            </dd>
        }
        else
        {
            <dd>
                Not entered
            </dd>
        }

    </dl>
</div>
<p>
    <a style="margin-left:180px;" class="btn btn-success" href="~/Bakan/DoctorEdit/@Model.id.ToString()">Edit Doctor</a> |
    <a class="btn btn-info" href="~/Bakan/DoctorIndex">Return to Doctor List</a>
</p>
